<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:typeface">serif</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="BigTitle">
        <item name="android:textSize">40sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textColor">#202032</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/avenirlstdmedium</item>
    </style>

    <style name="Title">
        <item name="android:fontFamily">@font/avenirlstdmedium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textColor">#202032</item>

    </style>

    <style name="Label">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textColor">#707070</item>
        <item name="android:fontFamily">@font/avenirlstdmedium</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginStart">39dp</item>
    </style>

    <style name="FilterText">
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:fontFamily">@font/avenirlstdmedium</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>